<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RentospectMobileApp.MainShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RentospectMobileApp"
    xmlns:views="clr-namespace:RentospectMobileApp.Views"
    Title="">
    <Shell.TitleView>
        <Grid Padding="10" ColumnDefinitions="Auto,*,Auto">
            <!-- Left logo -->
            <Image Source="logo.png" HeightRequest="32" VerticalOptions="Center" />

            <!-- Spacer -->
            <Label Grid.Column="1" Text="" />

            <!-- Logout button on the right -->
            <ImageButton Grid.Column="2" 
                    BackgroundColor="Transparent"
                    Source="logout.svg"
                    Clicked="OnLogoutClicked"
                    Padding="0" />
        </Grid>
    </Shell.TitleView>
    <TabBar>
        <!-- Pending tab (default) -->
        <ShellContent
            Icon="clock.svg"
            Title="Pending"
            Route="PendingPage"
            ContentTemplate="{DataTemplate views:PendingInspectionsView}" />

        <!-- New tab -->
        <ShellContent
            Title="New"
            Icon="plus.svg"
            Route="NewPage"
            ContentTemplate="{DataTemplate views:NewInspectionView}" />
    </TabBar>

</Shell>
